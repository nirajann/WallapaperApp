<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/anime_img"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:background="@drawable/artlogo" />
        <TextView
            android:id="@+id/anime_descriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito_bold"
            android:textStyle="bold"
            android:gravity="start"
            android:text="Description"
            android:textColor="@color/wallpaperprimary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/anime_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@android:dimen/app_icon_size"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito_bold"
            android:textStyle="bold"
            android:gravity="start"
            android:text="Art wallpapers"
            android:textColor="@color/wallpaperprimary"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/anime_AuthorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito_bold"
            android:textStyle="bold"
            android:gravity="start"
            android:text="Author:"
            android:textColor="@color/wallpaperprimary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/anime_author"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@android:dimen/app_icon_size"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito_bold"
            android:textStyle="bold"
            android:gravity="start"
            android:text="Art wallpapers"
            android:textColor="@color/wallpaperprimary"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/anime_GenraTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito_bold"
            android:textStyle="bold"
            android:gravity="start"
            android:text="Genra:"
            android:textColor="@color/wallpaperprimary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/anime_Genra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@android:dimen/app_icon_size"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito_bold"
            android:textStyle="bold"
            android:gravity="start"
            android:text="Art wallpapers"
            android:textColor="@color/wallpaperprimary"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent" />



    </LinearLayout>



</RelativeLayout>